@model NaturaStore.Web.ViewModels.Product.CreateProductViewModel

@{
    ViewData["Title"] = "Създай продукт";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
        <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Create" method="post">
    
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

  
    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    
    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    
    <div class="form-group mb-3">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <hr class="my-4" />
    
    <div class="form-group mb-3">
        <label asp-for="CategoryId" class="form-label">Избери категория</label>
        <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories">
            <option disabled selected value="">-- Избери категория --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <h4>Избери съществуващ производител:</h4>
<div class="form-group">
    <select asp-for="ProducerId" class="form-control" asp-items="Model.Producers">
    <option disabled selected value="">-- Избери производител --</option>
    <option value="0">-- Нов производител --</option> 
</select>
    <span asp-validation-for="ProducerId" class="text-danger"></span>
</div>

   
    <<div id="newProducerFields" style="display:none;">
    <h4>Или въведи нов производител:</h4>

    <div class="form-group">
        <label asp-for="NewProducer.Name"></label>
        <input asp-for="NewProducer.Name" class="form-control" />
        <span asp-validation-for="NewProducer.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewProducer.Description"></label>
        <input asp-for="NewProducer.Description" class="form-control" />
        <span asp-validation-for="NewProducer.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewProducer.Location"></label>
        <input asp-for="NewProducer.Location" class="form-control" />
        <span asp-validation-for="NewProducer.Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewProducer.ContactEmail"></label>
        <input asp-for="NewProducer.ContactEmail" class="form-control" />
        <span asp-validation-for="NewProducer.ContactEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewProducer.PhoneNumber"></label>
        <input asp-for="NewProducer.PhoneNumber" class="form-control" />
        <span asp-validation-for="NewProducer.PhoneNumber" class="text-danger"></span>
    </div>
</div>

    <button type="submit" class="btn btn-success">Създай</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
        <script>
            function toggleNewProducerFields() {
                const select = document.getElementById("producerSelect");
                const newProducerFields = document.getElementById("newProducerFields");

                if (select.value === "none") {
                    newProducerFields.style.display = "block";
                } else {
                    newProducerFields.style.display = "none";
                }
            }

            document.addEventListener("DOMContentLoaded", function () {
                const select = document.getElementById("producerSelect");
                toggleNewProducerFields(); 

                select.addEventListener("change", toggleNewProducerFields);
            });
        </script>
}
