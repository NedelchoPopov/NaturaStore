@using NaturaStore.Web.ViewModels.Product
@model CreateProductViewModel

@{
    ViewData["Title"] = "Създай продукт";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.SuccessMessage != null)
{
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

<form asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="ProducerId"></label>
        <select asp-for="ProducerId" asp-items="Model.Producers" class="form-control"></select>
        <span asp-validation-for="ProducerId" class="text-danger"></span>
        <a asp-controller="Producer" asp-action="Create" class="btn btn-link mt-2">➕ Добави нов производител</a>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Създай продукт</button>
</form>
