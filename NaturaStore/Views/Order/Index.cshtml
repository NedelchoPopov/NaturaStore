@using NaturaStore.Web.ViewModels.Order
@model IEnumerable<OrderListViewModel>

<h2>Поръчки</h2>

<table class="table">
    <thead>
        <tr>
            <th>Идентификатор</th>
            <th>Потребител</th>
            <th>Дата на създаване</th>
            <th>Статус</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.UserName</td>
                    <td>@order.CreatedOn</td>
                    <td>@order.Status</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = order.Id })">Детайли</a>
                        <a href="@Url.Action("Delete", new { id = order.Id })">Изтриване</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
