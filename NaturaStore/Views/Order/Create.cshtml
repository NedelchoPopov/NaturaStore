@using NaturaStore.Web.ViewModels.Order
@model OrderCreateViewModel

<h2>Създаване на нова поръчка</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="UserId">Потребител</label>
        <input type="text" class="form-control" asp-for="UserId" />
    </div>

    <div class="form-group">
        <label for="Products">Продукти</label>
        <select asp-for="ProductIds" class="form-control" multiple>
            @foreach (var product in Model.Products)
            {
                    <option value="@product.Value">@product.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Създаване на поръчка</button>
</form>