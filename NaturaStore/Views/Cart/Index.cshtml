@model NaturaStore.Web.ViewModels.Cart.CartViewModel
@{
    ViewData["Title"] = "Your Cart";
}

<h1>Your Cart</h1>

@if (!Model.Items.Any())
{
        <p>Your cart is empty.</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Continue shopping</a>
}
else
{
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Unit price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Items)
            {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.UnitPrice:C</td>
                        <td>
                            <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <input type="number" name="quantity" value="@item.Quantity" min="1"
                                       class="form-control d-inline-block" style="width:80px" />
                                <button class="btn btn-sm btn-outline-secondary">Update</button>
                            </form>
                        </td>
                        <td>@item.Subtotal:C</td>
                        <td>
                            <form asp-action="Remove" method="post">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <button class="btn btn-sm btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
            }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                    <td colspan="2">@Model.GrandTotal:C</td>
                </tr>
            </tfoot>
        </table>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Continue shopping</a>
        <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Checkout</a>
}
